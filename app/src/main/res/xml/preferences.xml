<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory

        android:title="Innstillinger">

        <EditTextPreference
            android:key="username"
            android:title="Brukernavn"
            android:summary="Endre ditt brukernavn"
            android:defaultValue=""
            android:inputType="text" />
        <CheckBoxPreference
            android:key="notifications"
            android:title="Slå på Notifikasjoner"
            android:summary="Motta Notifikasjoner"
            android:defaultValue="true" />
        <ListPreference
            android:key="antallmattestykker"
            android:title="Antall mattestykker"
            android:dialogTitle="Velg antall mattestykker"
            android:entries="@array/antallOppgaver"
            android:entryValues="@array/antallOppgaver"
            android:defaultValue="5" />
        <ListPreference
            android:key="velgspraak"
            android:title="Språk"
            android:dialogTitle="Velg ønsket språk"
            android:entries="@array/spraak"
            android:entryValues="@array/spraak"
            android:defaultValue="Norsk" />
    </PreferenceCategory>

</PreferenceScreen>
