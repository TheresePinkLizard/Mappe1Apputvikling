<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main"
    android:orientation="horizontal"
    android:background="@drawable/bakgrunn4">

    <ImageView
        android:layout_width="586dp"
        android:layout_height="321dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/confetti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/gratulerer"
        android:layout_width="251dp"
        android:layout_height="65dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="116dp"
        android:gravity="center"
        android:text="@string/gratulerer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nyttSpill"
        style="@style/tastatur"
        android:layout_width="184dp"
        android:layout_height="47dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="252dp"
        android:text="@string/nyttspill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/spillSlutt"
        style="@style/tastatur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="380dp"
        android:layout_marginTop="252dp"
        android:text="@string/tilbakeforside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>