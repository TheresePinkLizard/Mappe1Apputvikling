<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/bakgrunn4">

    <ImageView
        android:layout_width="404dp"
        android:layout_height="287dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/confetti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        style="@style/gratulerer"
        android:layout_width="251dp"
        android:layout_height="65dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="@string/gratulerer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nyttSpill"
        android:layout_width="138dp"
        android:layout_height="50dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="304dp"
        android:text="Nytt spill"
        style="@style/tastatur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/spillSlutt"
        style="@style/tastatur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="380dp"
        android:text="Tilbake til forside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>